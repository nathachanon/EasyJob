                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="desc.png" HeightRequest="15" WidthRequest="20"/>

                    <Label Text="รายละเอียดงาน" Grid.Column="1" Margin="5" TextColor="#8E8E8E" FontSize="18"/>

                </Grid>
                <Grid Margin="20,0,0,3" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="telblue.png" HeightRequest="15" WidthRequest="20"/>

                    <Label Text="094-102-6725" Grid.Column="1" Margin="5" TextColor="#8E8E8E" FontSize="18"/>

                </Grid>
                <Grid Margin="20,0,0,3" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
